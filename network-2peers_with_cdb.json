{
    "version": "2",
    "services": {
        "cop": {
            "image": "lhaskins/fabric-cop:latest",
            "command": "sh -c 'cop server start -ca ~/.cop/ec.pem -ca-key ~/.cop/ec-key.pem -config /config/cop.json -address 0.0.0.0'",
            "ports": [
                 "8888:8888"
            ],
            "container_name": "cop-01"
        },
        "orderer": {
            "image": "lhaskins/fabric-orderer",
            "restart": "unless-stopped",
            "environment": {
                "ORDERER_GENERAL_LEDGERTYPE": "ram",
                "ORDERER_GENERAL_BATCHTIMEOUT": "10s",
                "ORDERER_GENERAL_BATCHSIZE": "10",
                "ORDERER_GENERAL_MAXWINDOWSIZE": "1000",
                "ORDERER_GENERAL_ORDERERTYPE": "solo",
                "ORDERER_GENERAL_LISTENADDRESS": "0.0.0.0",
                "ORDERER_RAMLEDGER_HISTORY_SIZE": "100"
            },
            "command": "orderer",
            "ports": [
                 "5151:7050"
            ],
            "container_name": "orderer-01"
        },
        "couchdb0": {
            "image": "klaemo/couchdb:2.0.0",
            "command": "tini -- /docker-entrypoint.sh /opt/couchdb/bin/couchdb",
            "ports": [
                 "5984:5984"
            ]
        },
        "couchdb1": {
            "image": "klaemo/couchdb:2.0.0",
            "command": "tini -- /docker-entrypoint.sh /opt/couchdb/bin/couchdb",
            "ports": [
                 "5985:5984"
            ]
        },
        "couchdb2": {
            "image": "klaemo/couchdb:2.0.0",
            "command": "tini -- /docker-entrypoint.sh /opt/couchdb/bin/couchdb",
            "ports": [
                 "5986:5984"
            ]
        },
        "vp0": {
            "image": "lhaskins/fabric-peer",
            "restart": "unless-stopped",
            "environment": {
                 "CORE_PEER_ID": "vp0",
                 "CORE_PEER_ADDRESSAUTODETECT": "false",
                 "CORE_NEXT": "true",
                 "CORE_PEER_ADDRESS": "10.120.223.35:7051",
                 "CORE_PEER_NETWORKID": "${CORE_PEER_NETWORKID}",
                 "CORE_PEER_COMMITTER_ENABLED": "true",
                 "CORE_PEER_COMMITTER_LEDGER_ORDERER": "orderer:7050",
                 "CORE_PEER_PROFILE_ENABLED": "true",
                 "CORE_PEER_DISCOVERY_PERIOD": "60s",
                 "CORE_PEER_DISCOVERY_TOUCHPERIOD": "60s",
                 "CORE_VM_ENDPOINT": "unix:///host/var/run/docker.sock",
                 "CORE_LOGGING_LEVEL": "DEBUG",
                 "CORE_LEDGER_STATE_STATEDATABASE": "CouchDB",
                 "CORE_LEDGER_STATE_COUCHDBCONFIG_COUCHDBADDRESS": "couchdb0:5984"
            },
            "volumes": [
                  "/var/run:/host/var/run/"
            ],
            "command": "peer node start",
            "depends_on": [
                 "orderer",
                 "cop"
            ],
            "links": [
                  "orderer",
                  "couchdb0",
                  "cop"
            ],
            "ports": [
                  "7051:7051"
            ],
            "container_name": "vp0"
        },
        "vp1": {
            "image": "lhaskins/fabric-peer",
            "restart": "unless-stopped",
            "environment": {
                 "CORE_PEER_ID": "vp1",
                 "CORE_PEER_ADDRESSAUTODETECT": "false",
                 "CORE_NEXT": "true",
                 "CORE_PEER_ADDRESS": "10.120.223.35:7052",
                 "CORE_PEER_NETWORKID": "${CORE_PEER_NETWORKID}",
                 "CORE_PEER_COMMITTER_ENABLED": "true",
                 "CORE_PEER_COMMITTER_LEDGER_ORDERER": "orderer:7050",
                 "CORE_PEER_PROFILE_ENABLED": "true",
                 "CORE_PEER_DISCOVERY_PERIOD": "60s",
                 "CORE_PEER_DISCOVERY_TOUCHPERIOD": "60s",
                 "CORE_PEER_DISCOVERY_ROOTNODE": "vp0:7051",
                 "CORE_VM_ENDPOINT": "unix:///host/var/run/docker.sock",
                 "CORE_LOGGING_LEVEL": "DEBUG",
                 "CORE_LEDGER_STATE_STATEDATABASE": "CouchDB",
                 "CORE_LEDGER_STATE_COUCHDBCONFIG_COUCHDBADDRESS": "couchdb1:5985"
            },
            "volumes": [
                  "/var/run:/host/var/run/"
            ],
            "command": "peer node start",
            "depends_on": [
                  "orderer",
                  "cop"
            ],
            "links": [
                  "orderer",
                  "couchdb1",
                  "vp0",
                  "cop"
            ],
            "ports": [
                 "7052:7051"
            ],
            "container_name": "vp1"
        },
        "vp2": {
            "image": "lhaskins/fabric-peer",
            "restart": "unless-stopped",
            "environment": {
                 "CORE_PEER_ID": "vp2",
                 "CORE_PEER_ADDRESSAUTODETECT": "false",
                 "CORE_NEXT": "true",
                 "CORE_PEER_ADDRESS": "10.120.223.35:7053",
                 "CORE_PEER_NETWORKID": "${CORE_PEER_NETWORKID}",
                 "CORE_PEER_COMMITTER_ENABLED": "true",
                 "CORE_PEER_COMMITTER_LEDGER_ORDERER": "orderer:7050",
                 "CORE_PEER_PROFILE_ENABLED": "true",
                 "CORE_PEER_DISCOVERY_PERIOD": "60s",
                 "CORE_PEER_DISCOVERY_TOUCHPERIOD": "60s",
                 "CORE_PEER_DISCOVERY_ROOTNODE": "vp0:7051",
                 "CORE_VM_ENDPOINT": "unix:///host/var/run/docker.sock",
                 "CORE_LOGGING_LEVEL": "DEBUG",
                 "CORE_LEDGER_STATE_STATEDATABASE": "CouchDB",
                 "CORE_LEDGER_STATE_COUCHDBCONFIG_COUCHDBADDRESS": "couchdb2:5986"
            },
            "volumes": [
                  "/var/run:/host/var/run/"
            ],
            "command": "peer node start",
            "depends_on": [
                  "orderer",
                  "cop"
            ],
            "links": [
                  "orderer",
                  "couchdb2",
                  "vp0",
                  "vp1",
                  "cop"
            ],
            "ports": [
                  "7053:7051"
            ],
            "container_name": "vp2"
        }
    }
}
